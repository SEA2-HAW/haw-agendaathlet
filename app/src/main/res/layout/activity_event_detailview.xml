<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:configChanges="orientation|screenSize"
    tools:context=".eventManager.PopupDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Name:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/NameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Beschreibung:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/descTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Descrition"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Event Löschen  "
        android:textColor="@color/red"
        android:background="@color/lightGray"
        android:textStyle="bold"
        android:onClick="deleteevent"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Alle Events mit diesem Namen Löschen "
        android:textColor="@color/red"
        android:background="@color/lightGray"
        android:textStyle="bold"
        android:onClick="deletemulevent"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Event Bearbeiten  "
        android:textColor="@color/blue"
        android:background="@color/lightGray"
        android:textStyle="bold"
        android:onClick="editevent"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Alle Events mit diesem Namen bearbeiten "
        android:textColor="@color/blue"
        android:background="@color/lightGray"
        android:textStyle="bold"
        android:onClick="editmulevent"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" OK  "
        android:textColor="@color/middleBlue"
        android:background="@color/lightGray"
        android:textStyle="bold"
        android:onClick="closePopup"
        android:layout_gravity="center"
        android:textSize="20sp"/>





</LinearLayout>
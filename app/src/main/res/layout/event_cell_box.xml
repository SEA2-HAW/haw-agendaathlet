<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view2">

    <TextView
        android:id="@id/eventNameAnzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/eventZeitAnzeige"
        android:clickable="true"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:text="Name"
        android:textColor="#003CA0"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventZeitAnzeige"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:text="Zeit"
        android:textColor="#003CA0"
        android:textSize="16dp" />


    <TextView

        android:id="@+id/eventDescriptionAnzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventNameAnzeige"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/eventZeitAnzeige"
        android:clickable="true"
        android:paddingBottom="14dp"
        android:text="Description"
        android:textColor="#003CA0"
        android:textSize="16dp" />


</RelativeLayout>
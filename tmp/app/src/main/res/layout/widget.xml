<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Agendaathlet.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.CalendarAppExample.AppWidgetContainer">

    <TextView
        android:id="@+id/wiidgeteventNameAnzeige"
        android:layout_width="360dp"
        android:layout_height="84dp"
        android:clickable="true"
        android:paddingLeft="105dp"
        android:text="Name"
        android:textColor="#003CA0"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/widgeteventZeitAnzeige"
        android:layout_width="97dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:paddingTop="0dp"
        android:paddingLeft="12dp"
        android:paddingBottom="5dp"
        android:text="Zeit"
        android:textColor="#003CA0"
        android:textSize="16dp" />

    <TextView

        android:id="@+id/widgeteventDescriptionAnzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:paddingLeft="105dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:text="Description"
        android:textColor="#003CA0"
        android:textSize="16dp"

        />
</RelativeLayout>